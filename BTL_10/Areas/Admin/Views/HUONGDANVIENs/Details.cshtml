@model BTL_10.Models.HUONGDANVIEN

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Tên hướng dẫn viên: @Model.TENHDV</h3>
            <div class="row">
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Chi tiết hướng dẫn viên</h4>
                    <div>
                        <p><strong>Giới tính:  </strong>
                        @if (Model.PHAI == true)
                        {
                            <span>Nam</span>
                        }else if (Model.PHAI == false)
                        {
                            <span>Nữ</span>
                        }
                        else
                        {
                            <span>Không xác định</span>
                        }
                        </p>
                        
                        <p><strong>Số điện thoại: </strong>@Model.SDT</p>
                        <p><strong>Địa chỉ: </strong>@Model.DIACHI</p>
                        <a href="/Admin/HUONGDANVIENs/Edit/@Model.MAHDV">
                            <button class="btn btn-outline-dark btn-rounded mr-1">Sửa</button>
                        </a>
                        <a href="@Url.Action("Index")">
                            <button class="btn btn-primary btn-rounded">Quay về danh sách</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
