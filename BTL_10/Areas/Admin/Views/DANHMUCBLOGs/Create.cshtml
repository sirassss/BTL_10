@model BTL_10.Models.DANHMUCBLOG

@{
    ViewBag.Title = "Create";
}

<h2>Thêm danh mục blog</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">
            <div class="col">
                <div class="control-label col-md-10"><h5>Mã danh mục blog</h5></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MADANHMUCBLOG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MADANHMUCBLOG, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col">
                <div class="control-label col-md-10"><h5>Tên danh mục blog</h5></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENDANHMUCBLOG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENDANHMUCBLOG, "", new { @class = "text-danger" })
                </div>
            </div>
        </div><br />


        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm danh mục blog" class="btn btn-outline-success" style="margin-left:-212px" />
            </div>
        </div>
    </div>
}

<div class="modal-footer">
    <a href="@Url.Action("Index")">
        <button class="btn btn-outline-primary" style="margin-right:202px">Trở về danh sách danh mục</button>
    </a>
</div>
