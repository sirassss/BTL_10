@model IEnumerable<BTL_10.Models.DIEMTHAMQUAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2>Quản lý Điểm Tham Quan</h2>
<div class="modal-footer">
    <div class="text-right">
        <a href="@Url.Action("Create")">
            <button class="btn mb-1 btn-rounded btn-primary"><i class="zmdi zmdi-plus"></i> Thêm điểm tham quan</button>
        </a>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Các điểm tham quan</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>Tên điểm tham quan</th>
                                <th>Địa chỉ</th>
                                <th>Mô tả điểm tham quan</th>
                                <th>Ảnh</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TENDD</td>
                                    <td>@item.DIACHI</td>
                                    <td>
                                        <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#dd-@item.MADD.Trim()">More</button>
                                        <div class="modal fade" id="dd-@item.MADD.Trim()">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Mô tả điểm đến</h5>
                                                        <button type="button" class="close" data-dismiss="modal">
                                                            <span>&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @item.MOTADIEMDEN
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @{
                                            string imgpath = "~/Areas/Admin/Data/Diemthamquan/" + item.ANH;
                                        }
                                        <img src="@Url.Content(imgpath)" alt="Lỗi Ảnh" width="100" height="100" />
                                    </td>
                                    <td>
                                        <a href="/Admin/DIEMTHAMQUANs/Details/@item.MADD">
                                            <button class="btn mb-1 btn-rounded btn-outline-dark" data-toggle="tooltip" data-placement="top" title="Xem">
                                                <i class="zmdi zmdi-eye"></i>
                                            </button>
                                        </a>
                                        <a href="/Admin/DIEMTHAMQUANs/Edit/@item.MADD">
                                            <button class="btn mb-1 btn-rounded btn-outline-dark" data-toggle="tooltip" data-placement="top" title="Sửa">
                                                <i class="zmdi zmdi-edit"></i>
                                            </button>
                                        </a>
                                        <button class="btn mb-1 btn-rounded btn-outline-dark" id="@item.MADD" onclick="deletedd(id)" data-toggle="tooltip" data-placement="top" title="Xóa">
                                            <i class="zmdi zmdi-delete"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Tên điểm tham quan</th>
                                <th>Địa chỉ</th>
                                <th>Mô tả điểm tham quan</th>
                                <th>Ảnh</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Areas/Admin/Content/js/anhlam/delete.js"></script>