@model IEnumerable<BTL_10.Models.ADMIN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2>Quản lý tài khoản admin</h2>
<div class="modal-footer">
    <div class="text-right">
        <a href="@Url.Action("Create")">
            <button class="btn mb-1 btn-rounded btn-primary"><i class="zmdi zmdi-plus"></i> Thêm tài khoản</button>
        </a>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Các điểm tham quan</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>Họ và tên</th>
                                <th>Loại tài khoản</th>
                                <th>Tên đăng nhập</th>
                                <th>Mật khẩu</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.HOTEN</td>
                                    <td>@item.LOAITK</td>
                                    <td>@item.TENDN</td>
                                    <td>@item.MK</td>
                                    <td>@item.TRANGTHAI</td>
                                    <td>
                                        <a href="/Admin/ADMINs/Edit/@item.ID">
                                            <button class="btn mb-1 btn-rounded btn-outline-dark" data-toggle="tooltip" data-placement="top" title="Sửa">
                                                <i class="zmdi zmdi-edit"></i>
                                            </button>
                                        </a>
                                        <button class="btn mb-1 btn-rounded btn-outline-dark" id="@item.ID" onclick="deletead(id)" data-toggle="tooltip" data-placement="top" title="Xóa">
                                            <i class="zmdi zmdi-delete"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Họ và tên</th>
                                <th>Loại tài khoản</th>
                                <th>Tên đăng nhập</th>
                                <th>Mật khẩu</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Admin/Content/js/anhlam/delete.js"></script>