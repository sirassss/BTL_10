<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Data Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Tour</th>
                                <th>Tên HDV</th>
                                <th>Giá</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Chi tiết</th>
                                <th>Ảnh</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MATOUR</td>
                                    <td>@item.TENTOUR</td>
                                    <td>@item.HUONGDANVIEN.TENHDV</td>
                                    <td><span class="badge badge-pill badge-light">@String.Format("{0:0,0đ}", item.GIA)</span></td>
                                    <td>@item.NGAYBD</td>
                                    <td>@item.NGAYKT</td>
                                    <td>@item.CHITIETTOUR</td>
                                    <td><img src="@item.ANH" alt="Lỗi Ảnh" width="100" height="100" /></td>
                                    <td>
                                        <button class="btn mb-1 btn-rounded btn-outline-dark" data-toggle="tooltip" data-placement="top" title="Xem">
                                            <i class="icon-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Tên Tour</th>
                                <th>Tên HDV</th>
                                <th>Giá</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Chi tiết</th>
                                <th>Ảnh</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>