@model BTL_10.Models.TOUR

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Tên TOUR: @Model.TENTOUR</h3>
            <h6 class="card-subtitle">Mã TOUR: @Model.MATOUR</h6><br />
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    @{ string imgpath = "~/Areas/Admin/Data/Tour/" + Model.ANH;}
                         <div class="white-box text-center"><img src="@Url.Content(imgpath)" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Chi tiết Tour</h4>
                    <p>@Model.CHITIETTOUR</p>
                    <p>Tên hướng dẫn viên: @Model.HUONGDANVIEN.TENHDV</p>
                    <p><h6>Ngày bắt đầu: </h6> @Model.NGAYBD</p>
                    <p><h6>Ngày kết thúc: </h6>@Model.NGAYKT</p>
                    <h2 class="mt-5">
                        Giá: @String.Format("{0:0,0đ}", Model.GIA)<small class="text-success">(36%off)</small>
                    </h2>
                    <a href="/Admin/TOURs/Edit/@Model.MATOUR">
                        <button class="btn btn-outline-dark btn-rounded mr-1">Sửa</button>
                    </a>
                    <a href="@Url.Action("Index")">
                        <button class="btn btn-primary btn-rounded">Quay về danh sách tour</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>