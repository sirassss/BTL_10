@model BTL_10.Models.KHACHSAN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sửa khách sạn</h2>

@using (Html.BeginForm("Edit", "KHACHSANs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">
            <div class="col">
                <div class="control-label col-md-10"><h5>Mã khách sạn</h5></div>
                <div class="col-md-10">
                    <input class="form-control" type="text" name="matour" value="@Model.MAKS" disabled />
                    @Html.HiddenFor(model => model.MAKS)
                </div>
            </div>

            <div class="col">
                <div class="control-label col-md-10"><h5>Tên khách sạn</h5></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENKS, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENKS, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-10"><h5>Địa chỉ</h5></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đồng ý sửa" class="btn btn-outline-success" style="margin-left:-212px" />
            </div>
        </div>
    </div>
}

<div class="modal-footer">
    <a href="@Url.Action("Index")">
        <button class="btn btn-outline-primary" style="margin-right:202px">Trở về danh sách khách sạn</button>
    </a>
</div>
