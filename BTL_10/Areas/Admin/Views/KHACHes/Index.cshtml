@model IEnumerable<BTL_10.Models.KHACH>

@{
    ViewBag.Title = "Index";
}

<h2>Quản lý khách hàng</h2>

<div class="modal-footer">
    <div class="btn-group mb-1" style="margin-right:900px">
        <button type="button" class="btn btn-info">Sắp xếp</button>
        <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"></button>
        <div class="dropdown-menu">
            <a class="dropdown-item" href="#">Theo ID</a> <a class="dropdown-item" href="#">Theo tên</a> <a class="dropdown-item" href="#">Theo giá</a>
            <div class="dropdown-divider"></div><a class="dropdown-item" href="#">Separated link</a>
        </div>
    </div>
    <div class="text-right">
        @*<a href="@Url.Action("Create")">
            <button class="btn mb-1 btn-rounded btn-primary"><i class="zmdi zmdi-plus"></i> Thêm phương tiện</button>
        </a>*@
    </div>
</div>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Các khách sạn</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>Tên khách hàng</th>
                                <th>Giới tính</th>
                                <th>Chứng minh nhân dân</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TENKHACH</td>
                                    <td>
                                        @if (item.PHAI == true)
                                        {
                                            <span>Nam</span>
                                        }
                                        else if (item.PHAI == false)
                                        {
                                            <span>Nữ</span>
                                        }
                                        else
                                        {
                                            <span>Không xác định</span>
                                        }
                                    </td>
                                    <td>@item.CMND</td>
                                    <td>@item.SDT</td>
                                    <td>@item.DIACHI</td>
                                    <td>
                                        <a href="/Admin/KHACHes/Details/@item.MAKHACH">
                                            <button class="btn mb-1 btn-rounded btn-outline-dark" data-toggle="tooltip" data-placement="top" title="Xem">
                                                <i class="zmdi zmdi-eye"></i>
                                            </button>
                                        </a>
                                        <a href="/Admin/KHACHes/Edit/@item.MAKHACH">
                                            <button class="btn mb-1 btn-rounded btn-outline-dark" data-toggle="tooltip" data-placement="top" title="Sửa">
                                                <i class="zmdi zmdi-edit"></i>
                                            </button>
                                        </a>
                                        <button class="btn mb-1 btn-rounded btn-outline-dark" id="@item.MAKHACH" onclick="deletekh(id)" data-toggle="tooltip" data-placement="top" title="Xóa">
                                            <i class="zmdi zmdi-delete"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Tên khách hàng</th>
                                <th>Giới tính</th>
                                <th>Chứng minh nhân dân</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Admin/Content/js/anhlam/delete.js"></script>