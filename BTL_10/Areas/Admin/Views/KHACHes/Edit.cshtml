@model BTL_10.Models.KHACH

@{
    ViewBag.Title = "Edit";
}

<h2>Sửa khách hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MAKHACH)


        <div class="form-row">
            <div class="col">
                <div class="control-label col-md-10"><h5>Tên khách</h5></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENKHACH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENKHACH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col">
                <div class="control-label col-md-10"><h5>Phái</h5></div>
                <div class="col-md-10">
                    <div class="checkbox">
                        <select class="form-select" id="cars" name="gioitinh">
                            <option value="true">Nam</option>
                            <option value="false">Nữ</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.PHAI, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="form-row">
            <div class="col">
                <div class="control-label col-md-10"><h5>Chứng minh nhân dân</h5></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col">
                <div class="control-label col-md-10"><h5>Tên khách</h5></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="control-label col-md-10"><h5>Địa chỉ</h5></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đồng ý sửa" class="btn btn-outline-success" style="margin-left:-212px" />
            </div>
        </div>
    </div>
}

<div class="modal-footer">
    <a href="@Url.Action("Index")">
        <button class="btn btn-outline-primary" style="margin-right:202px">Trở về danh sách TOUR</button>
    </a>
</div>