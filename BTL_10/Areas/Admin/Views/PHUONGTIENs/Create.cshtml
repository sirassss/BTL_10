@model BTL_10.Models.PHUONGTIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm phương tiện</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>
            <div class="form-group">
                <div class="control-label col-md-10"><h5>Mã phương tiện</h5></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MAPHUONGTIEN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MAPHUONGTIEN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-10"><h5>Tên phương tiện</h5></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENPHUONGTIEN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENPHUONGTIEN, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="control-label col-md-10"><h5>Chọn Tour</h5></div>
            <div class="col-md-10">
                @Html.DropDownList("MATOUR", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MATOUR, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm phương tiện" class="btn btn-outline-success" style="margin-left:-212px" />
            </div>
        </div>
    </div>
}

<div class="modal-footer">
    <a href="@Url.Action("Index")">
        <button class="btn btn-outline-primary" style="margin-right:202px">Trở về danh sách phương tiện</button>
    </a>
</div>
