
@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Login.cshtml";
}

<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">

                            <a class="text-center" href="index.html"> <h4>ADMIN</h4></a>

                            <form class="mt-5 mb-5 login-input">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="hovaten" id="hovaten" placeholder="Họ và tên" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="username" id="username" placeholder="Tên đănng nhập" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password" id="password" placeholder="Mật khẩu" required>
                                </div>
                                <button class="btn login-form__btn submit w-100" type="button" onclick="dangky()">Đăng ký</button>
                            </form>
                            <p class="mt-5 login-form__footer">Bạn đã có tài khoản <a href="@Url.Action("Index","Login")" class="text-primary">Đăng nhập</a> ngay bây giờ</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Areas/Admin/Content/js/anhlam/checkDN.js"></script>

