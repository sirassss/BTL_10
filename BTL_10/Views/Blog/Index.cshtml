@model PagedList.IPagedList<BTL_10.Models.BLOG>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<div class="hero-wrap js-fullheight" style="background-image: url('../../Content/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="@Url.Action("Index", "Home")">Home</a></span> <span>Blog</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Mẹo và Bài viết</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section bg-light">

    <div class="container">
        <div class="row d-flex">
            @foreach (var item in Model)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry align-self-stretch">
                        @{
                            string imgpath = "/Areas/Admin/Data/Blog/" + item.ANH;
                        }
                        <a href="/Blog/Detail/@item.MABAIVIET" class="block-20" style="background-image: url(@Url.Content(imgpath));">
                        </a>
                        <div class="text">
                            <span class="tag">Blog</span>
                            <h3 class="heading mt-3"><a href="/Blog/Detail/@item.MABAIVIET">@item.TIEUDE</a></h3>
                            <div class="meta mb-3">
                                <div><a href=""><span class="icon-calendar mr-1"></span>@String.Format("{0:dd/MM/yyyy}", @item.NGAYKHOITAO)</a></div>
                                <div><a href="#"><span class="icon-person mr-1"></span>@item.ADMIN.HOTEN</a></div>

                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new
                           {
                               page
                           }))

                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>